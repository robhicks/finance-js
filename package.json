{
  "name": "finance-js",
  "description": "Isomorphic Javascript finance functions",
  "version": "1.0.0",
  "author": "Rob Hicks <rob@hixfamily.org>",
  "repository": {
    "type": "git",
    "url": "git://github.com/robhicks/finance-js"
  },
  "browser": {
    "dist/finance-js.iife.js": "dist/finance-js.iife.js",
    "dist/finance-js.esm.js": "dist/finance-js.esm.js"
  },
  "main": "index.js",
  "module": "index.mjs",
  "scripts": {
    "build": "rimraf dist && node ./esbuild.config.js",
    "build:watch": "rimraf dist && node ./esbuild.config.js -w",
    "check": "tsc -w",
    "del": "rimraf dist",
    "dev": "run-p check build:watch"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chai": "^4.3.6",
    "esbuild": "^0.14.39",
    "esbuild-serve": "^1.0.1",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "esm": "^3.2.25",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "mock-socket": "^9.1.3",
    "playwright-test": "^7.4.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "type": "module",
  "keywords": [
    "finance",
    "money",
    "amortization",
    "accrued interest",
    "amount financed",
    "months financed",
    "interest",
    "present value",
    "future value",
    "balloon payment",
    "balloon amount",
    "payments",
    "amortiation table"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robhicks/finance-js/issues"
  }
}